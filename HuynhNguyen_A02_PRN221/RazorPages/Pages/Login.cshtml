@page
@model RazorPages.Pages.LoginModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    .container {
        margin-top: 10px; /* Adjust as needed */
    }

    .form-group {
        margin-bottom: 20px; /* Adjust as needed */
    }

    .login-form {
        background-color: #f8f9fa;
        border-radius: 5px;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .login-form h1 {
        font-size: 24px;
        text-align: center;
        margin-bottom: 20px;
    }

    .login-form .form-group {
        margin-bottom: 15px;
    }

    .login-form .form-group label {
        font-weight: bold;
    }

    .login-form .form-group input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 5px;
    }

    .login-form .form-group .text-danger {
        font-size: 12px;
    }

    .login-form .form-group .btn-primary {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="login-form">
                <h1>Login</h1>
                <form method="post" class="my-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Account.Email" class="control-label">
                            <i class="fa fa-envelope"></i> Email
                        </label>
                        <input asp-for="Account.Email" class="form-control" required="true" />
                        <span asp-validation-for="Account.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Account.Password" class="control-label">
                            <i class="fa fa-lock"></i> Password
                        </label>
                        <input asp-for="Account.Password" class="form-control" required="true" type="password" />
                        <span asp-validation-for="Account.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group text-danger">
                        @ViewData["notification"]
                    </div>
                    <div class="form-group text-center">
                        <button method="post" asp-page-handler="login" type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
